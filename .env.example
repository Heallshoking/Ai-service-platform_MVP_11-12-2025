# AI Service Platform - Environment Variables
# Скопируйте этот файл в .env и заполните своими данными

# ==================== ОСНОВНЫЕ НАСТРОЙКИ ====================
ENVIRONMENT=production
DEBUG=false
DATABASE_PATH=./data/ai_service.db

# ==================== API КОНФИГУРАЦИЯ ====================
API_URL=https://app.balt-set.ru
# Альтернативный URL для тестов:
# API_URL=https://heallshoking-ai-service-platform-mvp-11-12-2025-2f94.twc1.net

# ==================== TELEGRAM БОТЫ ====================
# Получить токены: https://t.me/BotFather

# Бот для клиентов (принимает заявки)
TELEGRAM_CLIENT_BOT_TOKEN=your_client_bot_token_here

# Бот для мастеров (терминал мастера)
TELEGRAM_MASTER_BOT_TOKEN=your_master_bot_token_here

# ==================== OPENAI API (опционально) ====================
# Для AI-диагностики и генерации инструкций
# Получить ключ: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==================== GOOGLE APIs (опционально) ====================
# Для интеграции с Google Calendar и Tasks
# Настройка: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://app.balt-set.ru/auth/google/callback

# ==================== КОМИССИИ ====================
# Процент комиссии платформы (по умолчанию 25%)
PLATFORM_COMMISSION_PERCENT=25

# ==================== БЕЗОПАСНОСТЬ ====================
# Секретный ключ для JWT токенов (сгенерируйте случайную строку)
SECRET_KEY=your_secret_key_here_generate_random_string

# ==================== TIMEWEB СПЕЦИФИЧНЫЕ ====================
# Автоматически устанавливается Timeweb при деплое
PORT=8000
