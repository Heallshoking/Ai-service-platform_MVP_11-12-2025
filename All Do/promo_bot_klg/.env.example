# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================

# Telegram Bot Token (получить через @BotFather) - ОБЯЗАТЕЛЬНО
TELEGRAM_TOKEN=your_bot_token_here

# Telegram ID администратора - ОБЯЗАТЕЛЬНО
ADMIN_CHAT_ID=123456789

# Список Telegram ID админов через запятую (опционально, если не указан - используется ADMIN_CHAT_ID)
# ADMIN_IDS=123456789,987654321,555555555

# ===========================================
# GOOGLE SHEETS CONFIGURATION
# ===========================================

# URL Google таблицы для хранения данных - ОБЯЗАТЕЛЬНО
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID/edit

# Путь к файлу credentials.json для доступа к Google Sheets (по умолчанию: credentials.json)
GOOGLE_CREDENTIALS_FILE=credentials.json

# ===========================================
# API KEYS (опционально)
# ===========================================

# Yandex Geocoder API ключ для геокодирования адресов
# YANDEX_API_KEY=your_yandex_api_key

# Google Maps API ключ
# GOOGLE_API_KEY=your_google_api_key

# ===========================================
# NOTIFICATIONS & LOGGING (опционально)
# ===========================================

# Email для отправки отчетов об ошибках
# ERROR_REPORT_EMAIL=admin@example.com

# Путь к файлу логов (по умолчанию: promoter_bot.log)
# LOG_FILE_PATH=/var/log/promoter_bot.log

# ===========================================
# CUSTOM SETTINGS (опционально)
# ===========================================

# URL карты промоутеров
# PROMO_MAP_URL=https://promo.example.com/map
